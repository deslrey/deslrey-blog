<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.deslrey.mapper.FolderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.deslrey.entity.po.Folder">
        <id column="id" property="id"/>
        <result column="folder_name" property="folderName"/>
        <result column="path" property="path"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" javaType="java.time.LocalDateTime"/>
    </resultMap>

    <!-- 获取全部文件夹名称列表(最新的10条) -->
    <select id="selectFolderNameList" resultMap="BaseResultMap">
        select id, folder_name
        from folder
        order by create_time desc
        limit 10
    </select>

    <!-- 查询所有文件夹 -->
    <select id="selectFolderList" resultMap="BaseResultMap">
        select id, folder_name, path, create_time
        from folder
        order by create_time desc
    </select>


</mapper>
