<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.deslrey.mapper.TagMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.deslrey.entity.po.Tag">
        <id column="id" property="id"/>
        <result column="tag_title" property="tagTitle"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" javaType="java.time.LocalDateTime"/>
    </resultMap>

    <!-- 插入标签 -->
    <insert id="insertTag" parameterType="java.lang.String">
        insert into tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="tagTitle != null and tagTitle != ''">tag_title,</if>
            create_time,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="tagTitle != null and tagTitle != ''">#{tagTitle},</if>
            NOW(),
        </trim>
    </insert>

    <!-- 修改标签标题 -->
    <update id="updateTagTitle" parameterType="org.deslrey.entity.po.Tag">
        update tag
        <set>
            <if test="tagTitle != null and tagTitle != ''">tag_title = #{tagTitle},</if>
        </set>
        where id = #{id}
    </update>

    <select id="selectTagCount" resultType="org.deslrey.entity.vo.CountVO">
        SELECT t.id,
               t.tag_title AS title,
               COUNT(a.id) AS total
        FROM tag t
                 LEFT JOIN article_tag at
                           ON t.id = at.tag_id
                 LEFT JOIN article a
                           ON at.article_id = a.id
                               AND a.exist = 1
        GROUP BY t.id, t.tag_title
        ORDER BY total DESC
    </select>

    <select id="selectIdByTitle" resultType="java.lang.Integer" parameterType="java.lang.String">
        select id
        from tag
        <where>
            <if test="title != null and title != ''">
                tag_title = #{title}
            </if>
        </where>
        order by create_time desc
        limit 1
    </select>

    <select id="selectTagList" resultMap="BaseResultMap">
        select id, tag_title, create_time
        from tag
        order by create_time desc
    </select>

    <select id="selectTagNameList" resultMap="BaseResultMap">
        select id, tag_title
        from tag
        order by create_time desc
    </select>


</mapper>
