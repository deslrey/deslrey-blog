<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.deslrey.mapper.ArticleMapper">

    <resultMap id="BaseResultMap" type="org.deslrey.entity.po.Article">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="word_count" property="wordCount"/>
        <result column="views" property="views"/>
        <result column="read_time" property="readTime"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" javaType="java.time.LocalDateTime"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" javaType="java.time.LocalDateTime"/>
        <result column="category" property="category"/>
        <result column="des" property="des"/>
        <result column="sticky" property="sticky"/>
        <result column="edit" property="edit"/>
        <result column="exist" property="exist"/>
    </resultMap>

    <insert id="insertArticle" parameterType="org.deslrey.entity.po.Article" keyProperty="id" useGeneratedKeys="true">
        insert into article(title, content, word_count, views, create_time, update_time, category, des, sticky, edit,
                            exist)
        values (#{title}, #{content}, #{wordCount}, #{views}, #{createTime}, #{updateTime},
                #{category}, #{des}, #{sticky}, #{edit}, #{exist})

    </insert>

    <select id="latestReleases" resultType="org.deslrey.entity.vo.LatestReleasesVO">
        select id, title, create_time AS createTime
        from article
        where exist = 1
        order by create_time desc
        limit 5;
    </select>

    <select id="getArticlesByPage" resultMap="BaseResultMap">
        SELECT id, title, views, create_time, category, sticky, edit
        FROM article
        LIMIT #{pageSize} OFFSET #{offset}
    </select>

    <select id="detail" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select id,
               title,
               content,
               word_count,
               views,
               read_time,
               create_time,
               update_time,
               category,
               des,
               sticky,
               edit,
               exist
        from article
        where id = #{id}
          and exist = 1;
    </select>

    <select id="archiveList" resultMap="BaseResultMap">
        select id, title, create_time, edit
        from article
        where exist = 1;
    </select>

    <select id="getArticlesAdmin" resultMap="BaseResultMap">
        SELECT id,
               title,
               word_count,
               views,
               create_time,
               update_time,
               category,
               des,
               sticky,
               edit,
               exist
        FROM article
    </select>

    <select id="editArticle" resultMap="BaseResultMap"
            parameterType="java.lang.Integer">
        select id, title, content, des, category
        from article
        where id = #{articleId}
    </select>

    <select id="selectArticles" resultMap="BaseResultMap">
        select id,
               title,
               word_count,
               views,
               read_time,
               create_time,
               edit,
               sticky
        from article
        order by create_time desc
    </select>

    <select id="selectArticleByCategory" resultMap="BaseResultMap"
            parameterType="java.lang.String">
        select id, title
        from article
        where category = #{category}
    </select>

</mapper>
