<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.deslrey.mapper.CategoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.deslrey.entity.po.Category">
        <id column="id" property="id"/>
        <result column="category_title" property="categoryTitle"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" javaType="java.time.LocalDateTime"/>
    </resultMap>

    <!-- 插入分类 -->
    <insert id="insertCategory" parameterType="org.deslrey.entity.po.Category">
        insert into category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="categoryTitle != null and categoryTitle != ''">category_title,</if>
            create_time,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="categoryTitle != null and categoryTitle != ''">#{categoryTitle},</if>
            NOW(),
        </trim>
    </insert>

    <!-- 更新分类标题 -->
    <update id="updateCategoryTitle" parameterType="org.deslrey.entity.po.Category">
        update category
        <set>
            <if test="categoryTitle != null and categoryTitle != ''">
                category_title = #{categoryTitle},
            </if>
        </set>
        <where>
            <if test="id != null">id = #{id}</if>
        </where>
    </update>

    <select id="selectCategoryCount" resultType="org.deslrey.entity.vo.CountVO">
        SELECT c.id,
               c.category_title AS title,
               COUNT(a.id)      AS total
        FROM category c
                 LEFT JOIN article a
                           ON a.category = c.category_title
                               AND a.exist = 1
        GROUP BY c.id, c.category_title
        ORDER BY total DESC
    </select>


    <select id="selectCategoryList" resultMap="BaseResultMap">
        select id, category_title, create_time
        from category
        order by create_time desc
    </select>

    <!-- 根据标题查询分类 -->
    <select id="selectCategoryByTitle" resultMap="BaseResultMap"
            parameterType="java.lang.String">
        select id, category_title
        from category
        <where>
            <if test="categoryTitle != null and categoryTitle != ''">
                category_title = #{categoryTitle}
            </if>
        </where>
    </select>

    <select id="selectCategoryArticleList" resultMap="BaseResultMap">
        select id, category_title
        from category
        <where>
            <if test="id != null">id = #{id}</if>
        </where>
    </select>


</mapper>
