<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.deslrey.mapper.CategoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.deslrey.entity.po.Category">
        <id column="id" property="id"/>
        <result column="category_title" property="categoryTitle"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" javaType="java.time.LocalDateTime"/>
    </resultMap>

    <!-- 插入分类 -->
    <insert id="insertCategory" parameterType="org.deslrey.entity.po.Category">
        insert into category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="categoryTitle != null and categoryTitle != ''">category_title,</if>
            create_time,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="categoryTitle != null and categoryTitle != ''">#{categoryTitle},</if>
            NOW(),
        </trim>
    </insert>

    <!-- 更新分类标题 -->
    <update id="updateCategoryTitle" parameterType="org.deslrey.entity.po.Category">
        update category
        <set>
            <if test="categoryTitle != null and categoryTitle != ''">
                category_title = #{categoryTitle},
            </if>
        </set>
        <where>
            <if test="id != null">id = #{id}</if>
        </where>
    </update>

    <!-- 分类统计列表 -->
    <select id="categoryCountList" resultType="org.deslrey.entity.vo.CategoryCountVO">
        select c.id,
               c.category_title as title,
               COUNT(a.id)      as total
        from category c
                 left join article a on a.category = c.category_title
        where a.exist = 1
        group by c.id, c.category_title
        order by total desc
    </select>

    <!-- 分类下的文章列表 -->
    <select id="categoryArticleList" resultMap="BaseResultMap">
        select id, category_title
        from category
        <where>
            <if test="id != null">id = #{id}</if>
        </where>
    </select>

    <!-- 分类列表 -->
    <select id="categoryList" resultMap="BaseResultMap">
        select id, category_title, create_time
        from category
        <where>
            <if test="categoryTitle != null and categoryTitle != ''">
                category_title like concat('%', #{categoryTitle}, '%')
            </if>
        </where>
        order by create_time desc
    </select>

    <!-- 根据标题查询分类 -->
    <select id="selectCategoryByTitle"
            resultType="org.deslrey.entity.vo.CategoryVO"
            parameterType="java.lang.String">
        select id, category_title as categoryTitle
        from category
        <where>
            <if test="categoryTitle != null and categoryTitle != ''">
                category_title = #{categoryTitle}
            </if>
        </where>
    </select>

</mapper>
