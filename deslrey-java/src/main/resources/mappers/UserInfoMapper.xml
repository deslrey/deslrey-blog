<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.deslrey.mapper.UserInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.deslrey.entity.po.UserInfo">
        <id column="id" property="id"/>
        <result column="user_name" property="userName"/>
        <result column="pass_word" property="passWord"/>
        <result column="email" property="email"/>
        <result column="salt" property="salt"/>
        <result column="avatar" property="avatar"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" javaType="java.time.LocalDateTime"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" javaType="java.time.LocalDateTime"/>
        <result column="exist" property="exist"/>
    </resultMap>

    <!-- 插入用户 -->
    <insert id="insertUser" parameterType="org.deslrey.entity.po.UserInfo" useGeneratedKeys="true" keyProperty="id">
        insert into user_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userName != null and userName != ''">user_name,</if>
            <if test="passWord != null and passWord != ''">pass_word,</if>
            <if test="email != null and email != ''">email,</if>
            <if test="salt != null and salt != ''">salt,</if>
            create_time,
            update_time,
            <if test="exist != null">exist,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userName != null and userName != ''">#{userName},</if>
            <if test="passWord != null and passWord != ''">#{passWord},</if>
            <if test="email != null and email != ''">#{email},</if>
            <if test="salt != null and salt != ''">#{salt},</if>
            NOW(),
            NOW(),
            <if test="exist != null">#{exist},</if>
        </trim>
    </insert>

    <!-- 修改用户名 -->
    <update id="updateUserNameByName">
        update user_info
        <set>
            <if test="newUserName != null and newUserName != ''">
                user_name = #{newUserName}
            </if>
        </set>
        <where>
            <if test="oldUserName != null and oldUserName != ''">
                user_name = #{oldUserName}
            </if>
        </where>
    </update>

    <select id="selectUserByName" resultMap="BaseResultMap" parameterType="java.lang.String">
        select id,user_name,pass_word,email,salt,avatar,exist
        from user_info
        <where>
            <if test="userName != null and userName != ''">user_name = #{userName}</if>
        </where>
    </select>

    <!-- 检查用户名或邮箱是否存在 -->
    <select id="selectUserNameOrEmailExist" resultType="java.lang.Integer">
        select count(1)
        from user_info
        <where>
            <if test="userName != null and userName != ''">
                user_name = #{userName}
            </if>
            <if test="email != null and email != ''">
                <if test="userName != null and userName != ''">or</if>
                email = #{email}
            </if>
        </where>
    </select>


</mapper>
